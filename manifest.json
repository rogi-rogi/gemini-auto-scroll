{
  "manifest_version": 3,
  "name": "Gemini Auto Scroll",
  "version": "1.0",
  "description": "Enhances Google Gemini with a dynamic Table of Contents (TOC) for easy navigation and scroll position restoration.",
  "icons": {
    "128" : "logo.png"
  },
  "permissions": [
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "css": ["styles.css"],
      "js": ["constants.js", "ui.js", "features.js", "content.js", "background.js"]
    }
  ]
}